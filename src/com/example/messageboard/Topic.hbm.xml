<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.example.messageboard.Topic" table="topics">
        <meta attribute="class-description">
            This class contains topics.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="title" column="title" type="string"/>
        <property name="createdBy" column="created_by" type="string"/>
        <property name="timestamp" column="timestamp" type="calendar"/>
        <property name="recentMessage" column="recent_message" type="calendar"/>
    </class>
</hibernate-mapping>